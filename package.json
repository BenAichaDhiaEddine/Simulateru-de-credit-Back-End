{
  "name": "baladiaty-api",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "main": "src/index.js",
  "private": true,
  "license": "ISC",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "postinstall": "cd ./node_modules && node ../package_symlinks.js && cd ..",
    "precommit": "yarn lint",
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production forever start -a --uid 'node-rem' -v -c ts-node --files src/index.ts",
    "stop": "cross-env NODE_ENV=production forever stop 'node-rem'",
    "logs": "forever logs",
    "dev": "yarn postinstall && nodemon --ignore 'src/**/*.spec.ts' --exec ts-node --files src/index.ts",
    "lint": "tslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text --reporter=lcov mocha --require ts-node/register --full-trace --bail --timeout 20000 --exit tests/**/*.ts",
    "test:unit": "cross-env NODE_ENV=test mocha tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "codacy": "cat coverage/lcov.info | codacy-coverage -t $CODACY_PROJECT_TOKEN",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html",
    "docker:start": "cross-env NODE_ENV=production forever start -a --uid 'baladity-app' -v -c ts-node src/index.ts",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/arsela/baladity-backend-v2.git"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@slack/client": "^5.0.1",
    "axios": "^0.18.1",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.17.1",
    "express-useragent": "^1.0.13",
    "express-validation": "^1.0.2",
    "faker": "^4.1.0",
    "generate-password": "^1.5.1",
    "global": "^4.4.0",
    "handlebars": "^4.1.2",
    "helmet": "^3.21.1",
    "http-status": "^1.3.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-simple": "0.5.5",
    "kill-port": "^1.6.1",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.23",
    "mongo-seed-faker": "^1.0.3",
    "mongoose": "^5.7.5",
    "mongoose-auto-increment": "^5.0.1",
    "mongoose-delete": "^0.5.3",
    "mongoose-intl": "^3.1.1",
    "morgan": "^1.9.1",
    "mstime": "^0.6.4",
    "multer": "^1.4.2",
    "nodemailer": "^6.1.1",
    "nodemailer-mailgun-transport": "^1.4.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "path": "^0.12.7",
    "run-rs": "^0.7.4",
    "shelljs": "^0.8.4",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/express": "^4.16.1",
    "@types/joi": "^14.3.2",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codacy-coverage": "^3.4.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "forever": "^0.15.3",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "opn-cli": "^4.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.4.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "resolutions": {
    "deep-extend": "^0.5.1"
  }
}
